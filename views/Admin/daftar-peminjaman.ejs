<%- include('head.ejs') %>
<%- include('sidebar.ejs') %>
<!-- Table Section -->
<div class="w-full lg:ps-64">
<div class="max-w-[85rem] px-4 py-2 sm:px-6 lg:px-8 lg:py-8 mx-auto">
    <!-- Card -->
    <div class="flex flex-col">
      <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <!-- Header -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
              <div>
                <h2 class="text-xl font-semibold text-gray-800">
                  Daftar Pengajuan
                </h2>
                <p class="text-sm text-gray-600">
                  Terima peminjaman, lihat detail, dan delete (tolak).
                </p>
              </div>
  
              <div>
                <div class="inline-flex gap-x-2">
                </div>
              </div>
            </div>
            <!-- End Header -->
  
            <!-- Table -->
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="ps-6 py-3 text-start">
                    <label for="hs-at-with-checkboxes-main" class="flex">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          No
                        </span>
                    </label>
                  </th>
  
                  <th scope="col" class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Nama Peminjam
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Nama Ruangan
                      </span>
                    </div>
                  </th>

                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Nama Gedung
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Tanggal Pengajuan
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Status
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-center">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Opsi
                    </span>
                  </th>
                </tr>
              </thead>
  
              <tbody class="divide-y divide-gray-200">
                <% let counter = 1; %>
                <% peminjamans.forEach((peminjaman) => { %>
                <% peminjaman.detail_peminjamans.forEach((detail) => { %>
                <tr>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 py-3">
                      <div for="hs-at-with-checkboxes-1" class="flex">
                        <span class="block text-sm font-semibold text-gray-800"><%= counter++ %></span>
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                      <div class="flex items-center gap-x-3">
                          <span class="block text-sm font-semibold text-gray-800"><%= peminjaman.peminjam.nama %></span>
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <span class="block text-sm font-semibold text-gray-800"><%= detail.ruangan.nama_ruangan %></span>
                    </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <span class="block text-sm font-semibold text-gray-800"><%= detail.ruangan.gedung.nama_gedung %></span>
                    </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <span class="block text-sm font-semibold text-gray-800"><%= peminjaman.tanggal_pengajuan %></span>
                    </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <span class="text-sm font-semibold text-gray-800"><%= peminjaman.status_peminjaman %></span>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-1.5 flex justify-center space-x-2">
                      <% if(peminjaman.status_peminjaman === 'Menunggu') { %>
                        <button type="button" data-hs-overlay="#modal-terima-<%= peminjaman.id_peminjaman %>" class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium">
                            Terima
                        </button>
                        <button type="button" data-hs-overlay="#modal-detail-<%= peminjaman.id_peminjaman %>" class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium">
                            Detail
                        </button>
                        <button type="button" data-hs-overlay="#modal-tolak-<%= peminjaman.id_peminjaman %>" class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium">
                            Tolak
                        </button>
                      <% } else if (peminjaman.status_peminjaman === 'Diterima') { %>
                        <button type="button" data-hs-overlay="#modal-detail-<%= peminjaman.id_peminjaman %>" class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium">
                          Detail
                      </button>
                      <% } %>
                      </div>

                      

                        <div id="modal-terima-<%= peminjaman.id_peminjaman %>" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto">
                            <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                            <div class="relative flex flex-col bg-white shadow-lg rounded-xl">
                                <div class="absolute top-2 end-2">
                                <button type="button" class="flex justify-center items-center size-7 text-sm font-semibold rounded-lg border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-terima-<%= peminjaman.id_peminjaman %>">
                                    <span class="sr-only">Close</span>
                                    <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                                </button>
                                </div>
                        
                                <div class="p-4 sm:p-10 text-center overflow-y-auto">
                                <!-- Icon -->
                                <span class="mb-4 inline-flex justify-center items-center size-[46px] rounded-full border-4 border-green-50 bg-green-100 text-green-500">
                                    <svg class="flex-shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"/>
                                    </svg>
                                </span>
                                <!-- End Icon -->
                        
                                <h3 class="mb-2 text-xl font-bold text-gray-800">
                                  Terima Pengajuan Peminjaman?
                                </h3>
                                <p class="text-gray-500">
                                  Nama: <%= peminjaman.peminjam.nama %> <br>
                                  Ruangan: <%= detail.ruangan.nama_ruangan %>
                                </p>
                        
                                <div class="mt-6 flex justify-center gap-x-4">
                                    <form action="/admin/terima-peminjaman/<%= peminjaman.id_peminjaman %>" method="post">
                                        <button type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-green-100 disabled:opacity-50 disabled:pointer-events-none">
                                            Terima
                                        </button>
                                    </form>
                                </div>
                                </div>
                            </div>
                            </div>
                        </div>

                          <div id="modal-detail-<%= peminjaman.id_peminjaman %>" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto">
                            <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                              <div class="relative flex flex-col bg-white shadow-lg rounded-xl">
                                <div class="absolute top-2 z-[10] end-2">
                                  <button type="button" class="inline-flex justify-center items-center size-8 text-sm font-semibold rounded-lg border border-transparent bg-white/10 text-white hover:bg-white/20 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-detail-<%= peminjaman.id_peminjaman %>">
                                    <span class="sr-only">Close</span>
                                    <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                                  </button>
                                </div>
                          
                                <div class="aspect-w-16 aspect-h-8">
                                  <img class="w-full object-cover rounded-t-xl" src="/uploads/ruangan/<%= detail.ruangan.gambar_ruangan %>" alt="gambar_ruangan">
                                </div>
                          
                                <div class="p-4 sm:p-10 text-center overflow-y-auto">
                                  <h3 class="mb-2 text-2xl font-bold text-gray-800">
                                    Detail Ruangan yang Diajukan
                                  </h3>
                                  <p class="text-gray-500">
                                    <%= detail.ruangan.nama_ruangan %>
                                  </p>
                          
                                  <div class="mt-6 flex justify-center gap-x-4">
                                    <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-green-600 text-white hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-detail-<%= peminjaman.id_peminjaman %>">
                                      Oke
                                    </button>
                                    <a class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-green-600 hover:text-green-800 disabled:opacity-50 disabled:pointer-events-none" href="#">
                                      Settings
                                    </a>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>

                          <div id="modal-tolak-<%= peminjaman.id_peminjaman %>" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none">
                            <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                              <div class="flex flex-col bg-white border shadow-sm rounded-xl pointer-events-auto">
                                <div class="flex justify-between items-center py-3 px-4 border-b">
                                  <h3 class="font-bold text-gray-800">
                                    Tolak Peminjaman
                                  </h3>
                                  <button type="button" class="flex justify-center items-center size-7 text-sm font-semibold rounded-full border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-tolak-<%= peminjaman.id_peminjaman %>">
                                    <span class="sr-only">Close</span>
                                    <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                      <path d="M18 6 6 18"></path>
                                      <path d="m6 6 12 12"></path>
                                    </svg>
                                  </button>
                                </div>
                                <form action="/admin/tolak-peminjaman/<%= peminjaman.id_peminjaman %>" method="post">
                                <div class="p-4 overflow-y-auto">
                                  <label for="alasan_penolakan" class="block text-sm font-medium mb-2">Alasan Penolakan</label>
                                  <textarea name="alasan_penolakan" id="alasan_penolakan" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-green-500 focus:ring-green-500" placeholder="Alasan Penolakan" autofocus=""></textarea>
                                </div>
                                <div class="flex justify-end items-center gap-x-2 py-3 px-4 border-t">
                                  <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-tolak-<%= peminjaman.id_peminjaman %>">
                                    Close
                                  </button>
                                  <button type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-green-600 text-white hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none">
                                    Tolak
                                  </button>
                                </form>
                                </div>
                              </div>
                            </div>
                          </div>
                  </td>
                </tr>
                <% }); %>
             <% }); %>
            </tbody>
            </table>
            <!-- End Table -->
  
            <!-- Footer -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200">
              <div>
                <p class="text-sm text-gray-600">
                  <span class="font-semibold text-gray-800"></span> 
                </p>
              </div>
            </div>
            <!-- End Footer -->
          </div>
        </div>
      </div>
    </div>
    <!-- End Card -->
  </div>
  <!-- End Table Section -->
</div>
<%- include('footer.ejs') %>