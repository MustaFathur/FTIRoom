<%- include('head.ejs') %>
<%- include('sidebar.ejs') %>
<!-- Table Section -->
<div class="w-full lg:ps-64">
<div class="max-w-[85rem] px-4 py-2 sm:px-6 lg:px-8 lg:py-8 mx-auto">
    <!-- Card -->
    <div class="flex flex-col">
      <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <!-- Header -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
              <div>
                <h2 class="text-xl font-semibold text-gray-800">
                  Daftar Gedung
                </h2>
                <p class="text-sm text-gray-600">
                  Tambah gedung, lihat detail, edit dan delete.
                </p>
              </div>
  
              <div>
                <div class="inline-flex gap-x-2">
                  <a class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-green-600 text-white hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none" href="/admin/tambah-gedung">
                    <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                    Tambah Data
                  </a>
                </div>
              </div>
            </div>
            <!-- End Header -->
  
            <!-- Table -->
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="ps-6 py-3 text-start">
                    <label for="hs-at-with-checkboxes-main" class="flex">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          No
                        </span>
                    </label>
                  </th>
  
                  <th scope="col" class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Nama Gedung
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Alamat
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Gambar
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Created
                      </span>
                    </div>
                  </th>
  
                  <th scope="col" class="px-6 py-3 text-center">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Opsi
                    </span>
                  </th>
                </tr>
              </thead>
  
              <tbody class="divide-y divide-gray-200">
                <% let counter = 1; %>
                <% gedungs.forEach((gedung) => { %>
                <tr>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 py-3">
                      <div for="hs-at-with-checkboxes-1" class="flex">
                        <span class="block text-sm font-semibold text-gray-800"><%= counter++ %></span>
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                      <div class="flex items-center gap-x-3">
                          <span class="block text-sm font-semibold text-gray-800"><%= gedung.nama_gedung %></span>
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <span class="block text-sm font-semibold text-gray-800"><%= gedung.alamat %></span>
                    </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <img class="w-20 h-20 object-cover rounded" src="/uploads/gedung/<%= gedung.gambar_gedung %>" alt="gambar_gedung">
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-3">
                      <span class="text-sm font-semibold text-gray-800"><%= (gedung.createdAt).toDateString() %></span>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="px-6 py-1.5 flex justify-center space-x-2">
                      <a class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium" href="/admin/edit-gedung/<%= gedung.id_gedung %>">
                        Edit
                      </a>
                      <a class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium" href="/admin/detail-gedung/<%= gedung.id_gedung %>">
                        Detail
                      </a>
                        <button type="button" data-hs-overlay="#hapus-gedung-<%= gedung.id_gedung %>" class="inline-flex items-center text-sm text-green-600 decoration-2 hover:underline font-medium">
                          Hapus
                        </button>
                        
                        <div id="hapus-gedung-<%= gedung.id_gedung %>" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto">
                          <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all md:max-w-2xl md:w-full m-3 md:mx-auto">
                            <div class="relative flex flex-col bg-white border shadow-sm rounded-xl overflow-hidden">
                              <div class="absolute top-2 end-2">
                                <button type="button" class="flex justify-center items-center size-7 text-sm font-semibold rounded-lg border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#hapus-gedung-<%= gedung.id_gedung%>">
                                  <span class="sr-only">Close</span>
                                  <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                                </button>
                              </div>
                        
                              <div class="p-4 sm:p-10 overflow-y-auto">
                                <div class="flex gap-x-4 md:gap-x-7">
                                  <!-- Icon -->
                                  <span class="flex-shrink-0 inline-flex justify-center items-center size-[46px] sm:w-[62px] sm:h-[62px] rounded-full border-4 border-red-50 bg-red-100 text-red-500">
                                    <svg class="flex-shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                    </svg>
                                  </span>
                                  <!-- End Icon -->
                        
                                  <div class="grow">
                                    <h3 class="mb-2 text-xl font-bold text-gray-800">
                                      Delete Data Gedung
                                    </h3>
                                    <p class="text-gray-500">
                                      Permanently remove <%= gedung.nama_gedung %> data?
                                    </p>
                                  </div>
                                </div>
                              </div>
                        
                              <div class="flex justify-end items-center gap-x-2 py-3 px-4 bg-gray-50 border-t">
                                <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-800 dark:text-white dark:hover:bg-neutral-800" data-hs-overlay="#hapus-gedung-<%= gedung.id_gedung %>">
                                  Cancel
                                </button>
                                <form action="/admin/delete-gedung/<%= gedung.id_gedung %>" method="post">
                                  <button type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-500 text-white hover:bg-red-600 disabled:opacity-50 disabled:pointer-events-none">
                                    Hapus gedung
                                  </button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
              </tbody>
            </table>
            <!-- End Table -->
  
            <!-- Footer -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200">
              <div>
                <p class="text-sm text-gray-600">
                  <span class="font-semibold text-gray-800"><%= totalGedung %></span> results
                </p>
              </div>
            </div>
            <!-- End Footer -->
          </div>
        </div>
      </div>
    </div>
    <!-- End Card -->
  </div>
  <!-- End Table Section -->
</div>
<%- include('footer.ejs') %>