<%- include('head.ejs') %>
<%- include('sidebar.ejs') %>
<!-- Card Section -->
<div class="w-full lg:ps-64">
<div class="max-w-4xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Card -->
    <div class="bg-white rounded-xl shadow p-4 sm:p-7">
      <% if (message) { %>
        <div class="alert alert-<%= messageType %>">
          <%= message %>
        </div>
      <% } %> 
      <form action="/admin/tambah-ruangan/<%= gedung.id_gedung %>" method="post" enctype="multipart/form-data">
        <!-- Section -->
        <div class="grid sm:grid-cols-12 gap-2 sm:gap-4 py-8 first:pt-0 last:pb-0 border-t first:border-transparent border-gray-200">
          <div class="sm:col-span-12">
            <h2 class="text-lg font-semibold text-gray-800">
              Tambah Data Ruangan    
            </h2>
          </div>
          <!-- End Col -->

          <div class="sm:col-span-3">
            <div class="inline-block">
              <label for="af-submit-application-phone" class="inline-block text-sm font-medium text-gray-500 mt-2.5">
                Nama
              </label>
            </div>
          </div>
          <!-- End Col -->
  
          <div class="sm:col-span-9">
            <input id="nama_ruangan" type="text" name="nama_ruangan" class="py-2 px-3 pe-11 block w-full border border-gray-500 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
          </div>
          <!-- End Col -->

          <div class="sm:col-span-3">
            <div class="inline-block">
              <label for="af-submit-application-phone" class="inline-block text-sm font-medium text-gray-500 mt-2.5">
                Kapasitas
              </label>
            </div>
          </div>
          <!-- End Col -->
  
          <div class="sm:col-span-9">
            <input id="kapasitas" type="number" name="kapasitas" class="py-2 px-3 pe-11 block w-full border border-gray-500 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
          </div>
          <!-- End Col -->

          <div class="sm:col-span-3">
            <div class="inline-block">
              <label for="af-submit-application-phone" class="inline-block text-sm font-medium text-gray-500 mt-2.5">
                Fasilitas
              </label>
            </div>
          </div>
          <!-- End Col -->
  
          <div class="sm:col-span-9">
            <input id="fasilitas" type="text" name="fasilitas" class="py-2 px-3 pe-11 block w-full border border-gray-500 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
          </div>
          <!-- End Col -->

          <div class="sm:col-span-3">
            <label for="af-submit-application-resume-cv" class="inline-block text-sm font-medium text-gray-500 mt-2.5">
              Gambar 
            </label>
          </div>
          <!-- End Col -->
  
          <div class="sm:col-span-9">
            <label for="af-submit-application-resume-cv" class="sr-only">Gambar</label>
            <input type="file" name="gambar_ruangan" id="file" class="block w-full border border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none
              file:bg-gray-50 file:border-0
              file:bg-gray-100 file:me-4
              file:py-2 file:px-4
             ">
          </div>
          <!-- End Col -->

        </div>
        <!-- End Section -->
        <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
          Tambahkan
        </button>
      </form>
    </div>
    <!-- End Card -->
  </div>
  <!-- End Card Section -->
</div>
<%- include('footer.ejs') %>