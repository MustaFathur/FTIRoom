<%- include('head.ejs') %>
<%- include('sidebar.ejs') %>
  <!-- Content -->
  <div class="w-full lg:ps-64">
    <div class="p-4 sm:p-6 space-y-4 sm:space-y-6">
      <!-- Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        <!-- Card -->
        <div class="flex flex-col bg-white border shadow-sm rounded-xl">
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-x-2">
              <p class="text-xs uppercase tracking-wide text-gray-500">
                Total users
              </p>
              <div class="hs-tooltip">
                <div class="hs-tooltip-toggle">
                  <svg class="flex-shrink-0 size-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><path d="M12 17h.01"/></svg>
                  <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-gray-900 text-xs font-medium text-white rounded shadow-sm" role="tooltip">
                    Jumlah User dengan Role Peminjam
                  </span>
                </div>
              </div>
            </div>
  
            <div class="mt-1 flex items-center gap-x-2">
              <h3 class="text-xl sm:text-2xl font-medium text-gray-800">
                <%= totalUsers %>
              </h3>
            </div>
          </div>
        </div>
        <!-- End Card -->
  
        <!-- Card -->
        <div class="flex flex-col bg-white border shadow-sm rounded-xl">
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-x-2">
              <p class="text-xs uppercase tracking-wide text-gray-500">
                Total Gedung
              </p>
            </div>
  
            <div class="mt-1 flex items-center gap-x-2">
              <h3 class="text-xl sm:text-2xl font-medium text-gray-800">
                <%= totalGedung %>
              </h3>
            </div>
          </div>
        </div>
        <!-- End Card -->
  
        <!-- Card -->
        <div class="flex flex-col bg-white border shadow-sm rounded-xl">
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-x-2">
              <p class="text-xs uppercase tracking-wide text-gray-500">
                Total Ruangan
              </p>
            </div>
  
            <div class="mt-1 flex items-center gap-x-2">
              <h3 class="text-xl sm:text-2xl font-medium text-gray-800">
                <%= totalRuangan %>
              </h3>
            </div>
          </div>
        </div>
        <!-- End Card -->
  
        <!-- Card -->
        <div class="flex flex-col bg-white border shadow-sm rounded-xl">
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-x-2">
              <p class="text-xs uppercase tracking-wide text-gray-500">
                Total Ruangan Dipinjam
              </p>
            </div>
  
            <div class="mt-1 flex items-center gap-x-2">
              <h3 class="text-xl sm:text-2xl font-medium text-gray-800">
                <%= totalRuanganDipinjam %>
              </h3>
            </div>
          </div>
        </div>
        <!-- End Card -->
      </div>
      <!-- End Grid -->

  
      <!-- Card -->
      <div class="flex flex-col">
        <div class="-m-1.5 overflow-x-auto">
          <div class="p-1.5 min-w-full inline-block align-middle">
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
              <!-- Header -->
              <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
                <div>
                  <h2 class="text-xl font-semibold text-gray-800">
                    Users
                  </h2>
                  <p class="text-sm text-gray-600">
                    Daftar User
                  </p>
                </div>
              </div>
              <!-- End Header -->
  
              <!-- Table -->
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          No
                        </span>
                      </div>
                    </th>
                    
                    <th scope="col" class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          Nama
                        </span>
                      </div>
                    </th>
  
                    <th scope="col" class="px-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          Alamat
                        </span>
                      </div>
                    </th>
  
                    <th scope="col" class="px-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          Nomor HP  
                        </span>
                      </div>
                    </th>
  
                    <th scope="col" class="px-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          Gender
                        </span>
                      </div>
                    </th>
  
                    <th scope="col" class="px-6 py-3 text-start">
                      <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                          Birth Date
                        </span>
                      </div>
                    </th>
                  </tr>
                </thead>
                <% let counter = 1; %>
                <% peminjams.forEach((peminjam) => { %> 
                <tbody class="divide-y divide-gray-200">
                  <tr>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 py-3">
                      <div for="hs-at-with-checkboxes-1" class="flex">
                        <span class="block text-sm font-semibold text-gray-800"><%= counter++ %></span>
                      </div>
                    </div>
                  </td>
                  <td class="size-px whitespace-nowrap">
                    <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                      <div class="flex items-center gap-x-3">
                        <% if (peminjam.gender === 'Laki-laki') { %>
                          <img class="inline-block size-[38px] rounded-full" src="https://i.pinimg.com/736x/da/2d/f6/da2df612c785b2cf2ee1437eb43516d7.jpg" alt="Image Description">
                        <% } else if (peminjam.gender === 'Perempuan') { %>
                          <img class="inline-block size-[38px] rounded-full" src="https://i.pinimg.com/736x/b9/c0/c6/b9c0c611998d2a04a364d5eb15795bdd.jpg" alt="Image Description">
                        <% } %>
                        <div class="grow">
                          <span class="block text-sm font-semibold text-gray-800"><%= peminjam.nama %></span>
                          <span class="block text-sm text-gray-500"><%= peminjam.user.email %></span>
                        </div>
                      </div>
                    </div>
                  </td>
                  
                    <td class="size-px whitespace-nowrap">
                      <div class="px-6 py-3">
                        <span class="block text-sm font-semibold text-gray-800"><%= peminjam.jurusan %></span>
                        <span class="block text-sm text-gray-500"><%= peminjam.alamat %></span>
                      </div>
                    </td>
                    <td class="size-px whitespace-nowrap">
                      <div class="px-6 py-3">
                        <div class="flex items-center gap-x-3">
                          <span class="block text-sm text-gray-600"><%= peminjam.user.no_hp %></span>
                      </div>
                      </div>
                    </td>
                    <td class="size-px whitespace-nowrap">
                      <div class="px-6 py-3">
                        <div class="flex items-center gap-x-3">
                          <span class="block text-sm text-gray-600"><%= peminjam.gender %></span>
                      </div>
                      </div>
                    </td>
                    <td class="size-px whitespace-nowrap align-top">
                      <div class="block p-6" href="#">
                        <span class="text-sm text-gray-600"><%= peminjam.tanggal_lahir %></span>
                      </div>
                    </td>
                  </tr>
                </tbody>
                <% }); %>
              </table>
              <!-- End Table -->
  
              <!-- Footer -->
              <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200">
                <div>
                  <p class="text-sm text-gray-600">
                    <span class="font-semibold text-gray-800"><%= totalUsers %></span> results
                  </p>
                </div>
              </div>
              <!-- End Footer -->
            </div>
          </div>
        </div>
      </div>
      <!-- End Card -->
    </div>
  </div>
  <!-- End Content -->
  <!-- ========== END MAIN CONTENT ========== -->
<%- include('footer.ejs') %>