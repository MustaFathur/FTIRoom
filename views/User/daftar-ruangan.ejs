<%- include('head') %>
<!-- Card Blog -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Title -->
    <div class="max-w-4xl mx-auto text-center mb-10 lg:mb-14">
      <h2 class="text-2xl font-bold md:text-4xl md:leading-tight">Daftar Ruangan di Gedung: <%= gedung.nama_gedung %></h2>
    </div>
    <!-- End Title -->
  
    <!-- Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% ruangans.forEach((ruangan) => { %>
        <!-- Card -->
      <a class="group flex flex-col h-full border border-gray-200 hover:border-transparent hover:shadow-lg transition-all duration-300 rounded-xl p-5 cursor-pointer" data-hs-overlay="#modal-<%= ruangan.id_ruangan %>">
        <div class="aspect-w-16 aspect-h-11">
          <img class="w-full object-cover rounded-xl" src="/uploads/ruangan/<%= ruangan.gambar_ruangan %>" alt="gambar_ruangan">
        </div>
        <div class="my-6">
          <h3 class="text-xl font-semibold text-gray-800">
            Nama Ruangan: <%= ruangan.nama_ruangan %>
          </h3>
          <p class="mt-1 text-gray-600">
            Kapasitas: <%= ruangan.kapasitas %>
          </p>
          <p class="mt-1 text-gray-600">
            Fasilitas: <%= ruangan.fasilitas %>
          </p>
        </div>
        <div class="mt-auto flex items-center gap-x-3">
          <div>
            <h5 class="text-sm text-gray-800">Status Ketersediaan: <%= ruangan.status_ketersediaan %></h5>
          </div>
        </div>
      </a>
        <div id="modal-<%= ruangan.id_ruangan %>" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto">
          <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
            <div class="relative flex flex-col bg-white shadow-lg rounded-xl dark:bg-neutral-900">
              <div class="absolute top-2 z-[10] end-2">
                <button type="button" class="inline-flex justify-center items-center size-8 text-sm font-semibold rounded-lg border border-transparent bg-white/10 text-white hover:bg-white/20 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#modal-<%= ruangan.id_ruangan %>">
                  <span class="sr-only">Close</span>
                  <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                </button>
              </div>
        
              <div class="aspect-w-16 aspect-h-8">
                <img class="w-full object-cover rounded-t-xl" src="/uploads/ruangan/<%= ruangan.gambar_ruangan %>" alt="gambar_ruangan">
              </div>
        
              <div class="p-4 sm:p-10 text-center overflow-y-auto">
                <h3 class="mb-2 text-2xl font-bold text-gray-800 dark:text-neutral-200">
                  <%= ruangan.nama_ruangan %>
                </h3>
                <p class="text-gray-500 dark:text-neutral-500">
                  Kapasitas: <%= ruangan.kapasitas %> <br> Fasilitas: <%= ruangan.fasilitas %>
                </p>
        
                <div class="mt-6 flex justify-center gap-x-4">
                  <a href="/pinjam-ruangan/<%= ruangan.id_ruangan %>" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-green-600 text-white hover:bg-green-700 disabled:opacity-50 disabled:pointer-events-none">
                    Pinjam
                  </a>
                <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-green-600 hover:text-green-800 disabled:opacity-50 disabled:pointer-events-none dark:text-green-500 dark:hover:text-green-400" data-hs-overlay="#modal-<%= ruangan.id_ruangan %>">
                    Tutup
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!-- End Card -->
      <% }); %>
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Card Blog -->
<%- include('footer.ejs') %> 